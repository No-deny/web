@model IEnumerable<Diplom.Models.Suppliers>
@{

    Layout = "_Layout";
}
    <form class="search">
        <input type="text" placeholder="Искать здесь...">
        <button class="searchbutton" type="submit">Поиск</button>
    </form>
<h2 class="indexh2">Строительные материалы</h2>
<a class="addbutton" asp-controller="Home" asp-action="AddSuppliers">Добавить</a>

    <div class="row indexbody">
        @{ foreach (var s in Model)
            {
                <div class="supp col-lg-4">
                    <img class=" img-thumbnail" width="100" height="75" src="~/img/@s.img" />
                    <h4>@s.Suppname</h4>
                    <a>@s.shortdesc</a><br />
                    <a>@s.adress</a><br /><br />
                    <a href="/Home/Moredetails/@s.Id" class="btn btn-outline-dark">Подробнее</a>
                </div>

            }
        }
    </div>

